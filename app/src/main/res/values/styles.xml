<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#757575</item>
        <item name="android:windowBackground">@color/bacgroundColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Epigraph" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/bacgroundEpigraph</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/adana_script</item>
    </style>

    <style name="EpigraphEnd" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/bacgroundEpigraph</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:fontFamily">@font/acquest_script</item>

    </style>

</resources>